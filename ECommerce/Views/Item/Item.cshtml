@model ECommerce.DataModels.Item
@{
    ViewData["Title"] = "Create Item";
}

<div class="item__container">
    <h2 class="item__title">Create Item</h2>
    @if (!String.IsNullOrEmpty(Model.ItemError))
    {
        <h3 class="login__error">@Model.ItemError</h3>
    }
    <form method="post" asp-controller="Account" asp-action="CreateItem" class="item__form">
        <div>
            <p>Item ID: </p>
            <input asp-for="ItemID" />
        </div>
        <div>
            <p>Category ID: </p>
            <input asp-for="CategoryID" />
        </div>
        <div>
            <p>Item Name: </p>
            <input asp-for="Name" />
        </div>
        <div>
            <p>Quantity of Item: </p>
            <input asp-for="Quantity"/>
        </div>
        <div>
            <p>Item Price: </p>
            <input asp-for="Price" />
        </div>
        <div>
            <p>Description: </p>
            <input asp-for="Description" />
        </div>

        <button type="submit">Create</button>
    </form>
</div>
